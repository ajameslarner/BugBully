@model BugBully.Models.Bugs

@{
    ViewBag.Title = "Delete";
}
<div class="row">
    <div class="col-md-6">
        <h2>Delete Bug</h2>
        <hr />
        <h3>Are you sure you want to delete this bug?</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>Title:</dt>
            <dd>@Html.DisplayFor(model => model.Title)</dd>

            <dt>Description:</dt>
            <dd>@Html.DisplayFor(model => model.Description)</dd>

            <dt>Date Reported:</dt>
            <dd>@Html.DisplayFor(model => model.DateReported)</dd>

            <dt>Status:</dt>
            <dd>@Html.DisplayFor(model => model.Status.Name)</dd>

            <dt>Assigned to:</dt>
            <dd>@Html.DisplayFor(model => model.User.Name)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-default" href="@Url.Action("Index")">Back to List</a>
            </div>
        }
    </div>
</div>