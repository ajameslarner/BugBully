@model BugBully.Models.Bugs

@{
    ViewBag.Title = "Details";
}
<div class="row">
    <div class="col-md-6">
        <h2>Bug Details</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>Title:</dt>
            <dd>@Html.DisplayFor(model => model.Title)</dd>

            <dt>Description:</dt>
            <dd>@Html.DisplayFor(model => model.Description)</dd>

            <dt>Date Reported:</dt>
            <dd>@Html.DisplayFor(model => model.DateReported)</dd>

            <dt>Status:</dt>
            <dd>@Html.DisplayFor(model => model.Status.Name)</dd>

            <dt>Assigned to:</dt>
            <dd>@Html.DisplayFor(model => model.User.Name)</dd>
        </dl>
    </div>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary btn-sm mr-2" })
    @Html.ActionLink("Back to List", "Index", "", htmlAttributes: new { @class = "btn btn-default" })
</div>
