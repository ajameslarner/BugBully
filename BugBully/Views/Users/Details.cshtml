@model BugBully.Models.Users

@{
    ViewBag.Title = "Details";
}
<div class="row">
    <div class="col-md-6">
        <h2>User Details</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>Name:</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>
        </dl>
    </div>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary btn-sm mr-2" })
    @Html.ActionLink("Back to List", "Index", "", htmlAttributes: new { @class = "btn btn-default" })
</div>
